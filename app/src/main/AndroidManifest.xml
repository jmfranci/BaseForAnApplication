        android:theme="@style/AppTheme">
        <activity
            android:name=".TabbActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExchangeMessageActivity"
            android:label="@string/title_activity_exchange_message"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NavegationDrawerActivity"
            android:label="@string/title_activity_navegation_drawer"
